@using SystemRD1.WebApp.Extensions.User
@inject IAspNetUser User

@if (User.IsAuthenticated())
{
    <ul class="navbar-nav">
        <li class="nav-item mr1">
            Olá, @User.GetUserEmail()
        </li>
        <li class="nav-item">
            <a class="btn btn-link" asp-area="" asp-controller="User" asp-action="Logout">Sair</a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item mr-1">
            <a class="btn btn-success" asp-area="" asp-controller="User" asp-action="Register">Registrar</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="Login">Entrar</a>
        </li>
    </ul>
}
