@model LoginUserViewModel

@{ 
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <h4 class="h4 text-dark">Entre</h4>
                <hr />
                <div class="alert alert-danger" role="alert">
                    <h3>Ops! Algo errado! :(</h3>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control form-text text-dark" placeholder="E-mail de acesso" id="email" />
                    <label for="email" class="col-form-label"></label>
                    <div class="alert alert-danger" role="alert">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-text text-dark" placeholder="Senha de acesso" id="password" />
                    <label for="password" class="col-form-label"></label>
                    <div class="alert alert-danger" role="alert">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
                <br />
                Não possui uma conta ? <a asp-controller="User" asp-action="Register">Registre-se aqui !</a>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}