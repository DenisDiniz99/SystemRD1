@model RegisterUserViewModel

@{ 
    ViewData["Title"] = "Registro de Usuários";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <h4 class="h4 text-dark">Sua nova conta</h4>
                <hr />
                <div class="alert alert-danger">
                    <h3>Ops! Algo errado!</h3>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="col-form-label"></label>
                    <input asp-for="Email" class="form-control form-text" />
                    <div class="alert alert-danger" role="alert">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-form-label"></label>
                    <input asp-for="Password" class="form-control form-text" />
                    <div class="alert alert-danger">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="col-form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control form-text" />
                    <div class="alert alert-danger">
                        <span asp-validation-for="ConfirmPassword" class="text-dark"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Registrar</button>
                <br />
                Já possui uma conta ? <a asp-action="Login" asp-controller="User">Entre aqui!</a>
            </form>
        </div>
    </div>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}